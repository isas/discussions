<div class="article">
  <h2 id="sub_header"><span>Please log in</span></h2>

  <%= flashes(flash) %>

  <div class="login_div">
    <div align="center">
      <% form_tag sessions_path do %>
        <table class="login">
          <tr>
            <td>Login:</td>
            <td><%= text_field_tag "login", "" %></td>
          </tr>
          <tr>
            <td>Password:</td>
            <td><%= text_field_tag "password", "", {:type => "password"} %></td>
          </tr>
          <td></td>
          <td style="color:red; text-align:right;">
            <%= link_to 'Reset password', password_reset_sessions_path %>
            <%= link_to 'Register', new_user_path, :class => "register" %>
            <%= submit_tag 'Log in' %>
          </td>
          </tr>
        </table>
      <% end -%>
    </div>
  </div>

</div>