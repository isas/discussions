<%= javascript_include_tag "users" %>

<div class="article">
  <h2 id="sub_header"><span>Users</span></h2>

  <table>
    <tr>
      <th>User name</th>
      <th>Password</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Twitter name</th>
      <th colspan="2">Action</th>
    </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.user_name, user %></td>
        <td><%=h user.password %></td>
        <td><%=h user.full_name %></td>
        <td><%=h user.email %></td>
        <td><%=h user.twitter_name %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :id => "#{user.id}", :class=>"edit_user" %></td>
        <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
      <tr class="new_tr"><td colspan="7"><%= link_to 'New user', new_user_path, :id => "new_user" %></td></tr>
  </table>

  <br />

</div>