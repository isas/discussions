<td class='td_edit' colspan='7' style='display:none;'>

<% form_for @user do |f| %>
  <div class="errors">
      <%= custom_error_messages_for([f.object]) %>
    </div>

  <p>
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :twitter_name %><br />
    <%= f.text_field :twitter_name %>
  </p>
  <p>
    <%= f.submit 'Update', :class => "edit_user_submit" %> <%= link_to 'Cancel', users_path, :class=>"cancel_edit", :id => "#{f.object.id}"%>
  </p>
<% end %>

</td>